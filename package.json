    "node": ">=20"
  },
  "packageManager": "pnpm@9.3.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^22.15.30",
    "dotenv-cli": "^8.0.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.0",
      "@types/react-dom": "19.0.0"
    }
  },
  "dependencies": {
    "apify-client": "^2.12.6",
    "crypto": "^1.0.1",
    "ioredis": "^5.6.1"
  }
