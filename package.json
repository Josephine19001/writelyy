{
  "name": "loplyy-ai",
  "private": true,
  "scripts": {
    "build": "dotenv -c -- turbo build",
    "dev": "dotenv -c -- turbo dev --concurrency 15",
    "start": "dotenv -c -- turbo start",
    "lint": "biome lint .",
    "clean": "turbo clean",
    "format": "biome format . --write",
    "ngrok": "ngrok http 3000",
